# ===========================================
# Velocidoc PDF Generator API - Environment Variables
# ===========================================
# Copy this file to .env and configure for your environment

# -----------------------
# Server Configuration
# -----------------------
PORT=3000
HOST=0.0.0.0

# -----------------------
# Gotenberg PDF Service
# -----------------------
# URL of the Gotenberg instance for DOCX to PDF conversion
# Default: http://gotenberg:3000 (for Docker Compose)
GOTENBERG_URL=http://gotenberg:3000

# -----------------------
# Template Storage
# -----------------------
# Storage backend: 'local' (default), 's3', or 'azure' (future)
STORAGE_BACKEND=local

# Directory for local template storage (relative to working directory)
TEMPLATES_DIR=./templates

# Enable multi-tenant template isolation (templates stored per tenant)
MULTI_TENANT=false

# -----------------------
# Security & Authentication
# -----------------------
# Enable API key authentication (default: true in production)
AUTH_ENABLED=true

# Comma-separated list of valid API keys
# Generate secure keys: openssl rand -hex 32
API_KEYS=your-api-key-here,another-api-key

# Header name for API key (default: X-API-Key)
API_KEY_HEADER=X-API-Key

# -----------------------
# CORS Configuration
# -----------------------
# Comma-separated list of allowed origins (leave empty for all origins)
# Example: https://myapp.com,https://admin.myapp.com
CORS_ORIGIN=

# -----------------------
# Rate Limiting
# -----------------------
# Maximum requests per time window (default: 100)
RATE_LIMIT_MAX=100

# Time window for rate limiting (default: 1 minute)
# Examples: "1 minute", "15 minutes", "1 hour"
RATE_LIMIT_WINDOW=1 minute
